html
  head
    title Ingreso productos
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/style.css")
  body
    h2(class="tituloCentrado separacion") Ingrese Producto
    div(class="container")
        div(class="row justify-content-center ")
            div(class="col-md-12")
                form(action="/api/productos" method="post" class="mx-auto"  style="width:600px" id="productForm")
                    div(class="form-floating mb-3")
                        input(type="text" class="form-control" id="title" placeholder="Nombre" name="title" required)
                        label(for="nombre") Nombre
                    div(class="form-floating mb-3")
                        input(type="number" class="form-control" id="value" placeholder="Precio" name="value" required)
                        label(for="precio") Precio
                    div(class="form-floating mb-3")  
                        input(type="text" class="form-control" id="thumbnail" placeholder="Foto" name="thumbnail" required)
                        label(for="foto") Foto
                    div(class="form-floating mb-3 text-center")
                        input(class="btn btn-success" type="submit" value="Enviar")
    h2(class="tituloCentrado separacion") Vista de productos

    div(class="container")
        div(class="row")
            div(class="col-md-12  mx-auto"  style="width:600px")
                if hasProducts
                    table.table
                        thead
                            tr
                                th(scope='col') Nombre
                                th(scope='col') Precio
                                th(scope='col') Foto
                        tbody(id="tableContent")
                            each product in productArray
                                tr
                                    td= product.title 
                                    td= product.value
                                    td 
                                        img(src=product.thumbnail alt="im√°gen" class="imagenAdaptada")
                else
                    div
                        h2 No se encontraron productos!
                        
    h2(class="tituloCentrado separacion") Centro de Mensajes
    div(class="container" style="width:600px")
        div(class="row")
            div(class="col-md-12")
                form(action="" method="" class="" id="chatForm")
                    div(class="form-floating mb-3")  
                        input(type="email" class="form-control" id="email" placeholder="Email" name="email" required)
                        label(for="foto") Email
                    div(class="form-floating mb-3" id="chat")
                    div(class="row")
                        div(class="col-md-12")
                            div(class="form-floating mb-3")  
                                input(type="text" class="form-control" id="message" placeholder="Mensaje" name="menssage" required)
                                label(for="mesage" id="message") Mensaje
                        div(class="col-md-12")
                            div(class="form-floating mb-3 text-center")
                                input(class="btn btn-info" type="submit" value="Enviar")

    script(src="/socket.io/socket.io.js")
    script(src="/js/main.js")
             
