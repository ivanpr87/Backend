<div class="col-3 container mt-4" "text-center">
  <div class="row">
    <div class="col">
      <div class="text-center">
        <a href="/" class="btn btn-primary text-center">
          <- Ir a formulario</a>
      </div>
      <h2 class="text-center">Vista de Productos</h2>
      {{#if productos.length }}
      <table class="table table-bordered">
        <tr>
          <th class="text-center">Titulo</th>
          <th class="text-center">Precio</th>
          <th class="text-center">Foto</th>
        </tr>
        {{#each productos}}
        <tr>
          <td class="text-center">{{title}}</td>
          <td class="text-center">{{price}}</td>
          <td class="text-center"><img src="{{thumbnail}}" alt=""></td>
        </tr>
        {{/each}}
      </table>
      {{else}}
      <h3 class="text-center">No hay datos.</h3>
      {{/if}}
    </div>
  </div>
</div>